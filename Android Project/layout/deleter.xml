<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/circle_radius"
        android:layout_marginStart="@dimen/forty"
        android:layout_marginEnd="@dimen/forty"
        android:textColor="@color/preset_color"
        android:text="@string/question"
        android:gravity="center_horizontal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/end_marg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete_pop"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pop_up_margin"
            android:layout_weight="1"
            android:text="@string/delete" />

        <Button
            android:id="@+id/cancel_pop"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pop_up_margin"
            android:layout_weight="1"
            android:text="@string/cancel" />

    </LinearLayout>
</LinearLayout>